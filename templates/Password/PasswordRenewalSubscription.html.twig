{% extends 'Layout/Layout.html.twig' %}

{% block title %}
<div class="hero-connexion">
    <p class="page-title fs-4 text text-body text-center">
        Renouvellement du mot de passe
    </p>
</div>
{% endblock %}

{% block body %}
    <section>
        <div class="page-content body-container container-fluid mt-3">
            <div class="row">
                <div class="col-lg-4 col-md-3 col-sm-2 col-1"></div>
                <div class="col-lg-4 col-md-6 col-sm-8 col-10">
                    <form method="post" action="" class="connexion-form d-flex flex-column rounded-corners p-3 shadow" novalidate>
                        <div class="row">
                            <div class="d-flex flex-column pb-2">
                                <label for="password" class="form-label text-reset">Mot de passe :</label>
                                <div class="d-flex flex-row">
                                    <input type="password" class="form-control" id = "password" name="password" value="{{ warningPassword.fieldContent }}" required>
                                    <i class="far fa-eye-slash position-relative align-self-center" id="togglePassword" style="margin-left: -30px; cursor: pointer;"></i>
                                </div>
                                <div id="warningPassword" class="text-danger">{{ warningMessage }}</div>
                            </div>
                            <div class="d-flex flex-column pb-2">
                                <label for="passwordConfirmation" class="form-label text-reset">Confirmation du mot de passe :</label>
                                <div class="d-flex flex-row">
                                    <input type="password" class="form-control" id = "passwordConfirmation" name="passwordConfirmation" required>
                                    <i class="far fa-eye-slash position-relative align-self-center" id="togglePasswordConfirmation" style="margin-left: -30px; cursor: pointer;"></i> 
                                </div> 
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="button text-light" id="btnValider">Valider</button>
                            </div>
                            <div class="text-danger mb-3">{{ errorMessage }}</div>
                        </div>
                    </form>
                <div class="col-lg-4 col-md-3 col-sm-2 col-1"></div>
            </div>
        </div>
    </section>
{% endblock %}

{% block js %}
    <script type="module">
        import Pasword from "./Js/Classes/Password.js";
        let password = new Password();
    </script>
{% endblock %}