{% extends 'Layout/Layout.html.twig' %}

{% block title %}
<div class="hero-connexion">
    <p class="page-title fs-4 text text-body text-center">
        Renouvellement du mot de passe
    </p>
</div>
{% endblock %}

{% block body %}
    <section class="page-content">
        <div class="body-container container-fluid mt-3">
            <div class="row">
                <div class="col-lg-4 col-md-3 col-sm-2 col-1"></div>
                <div class="col-lg-4 col-md-6 col-sm-8 col-10">
                    <form method="post" action="index.php?action=Password\PasswordRenewal" class="connexion-form d-flex flex-column rounded-corners p-3 shadow" novalidate>
                        <div class="row">
                            <div class="d-flex flex-column">
                                <label for="emailAddress" class="form-label text-reset mb-3 fs-6">Entrez votre adresse email :</label>
                                <input type="text" class="form-control fs-6" id = "emailAddress" name="emailAddress" required value="{{ emailValue }}">
                                <div id="warningSurname" class="text-danger fs-6">{{ warningLogin }}</div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button class="button text-light mt-3 fs-6" id="">Valider</button>
                            </div>
                            <div class="text-success fs-6">{{ successMessage }}</div>
                            <div class="text-danger mb-3 fs-6">{{ errorMessage }}</div>
                        </div>
                    </form> 
                </div>
                <div class="col-lg-4 col-md-3 col-sm-2 col-1"></div>
            </div>
        </div>
    </section>
{% endblock %}