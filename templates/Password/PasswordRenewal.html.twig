{% extends 'Layout/layout.html.twig' %}

{% block body %}
    <section>
        <div class="body-container d-flex justify-content-center align-items-center">
            <form method="post" action="index.php?action=Password\PasswordRenewal" class="connexion-form container-fluid d-flex flex-column w-25 rounded-corners p-3" novalidate>
                <div class="d-flex flex-column pb-2">
                    <label for="emailAddress" class="form-label text-light">Entrez votre adresse email :</label>
                    <input type="text" class="form-control" id = "emailAddress" name="emailAddress" required value="{{ emailValue }}">
                    <div id="warningSurname" class="text-danger">{{ warningLogin }}</div>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="text-light" id="">Valider</button>
                </div>
                <div class="text-success">{{ successMessage }}</div>
                <div class="text-danger">{{ errorMessage }}</div>
            </form>
        </div>
    </section>
{% endblock %}