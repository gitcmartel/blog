{% extends 'Layout/layout.html.twig' %}

{% block body %}
    <section class="container-fluid d-flex align-items-center flex-column">
        <div class="d-flex w-50 justify-content-end mt-2 me-2">
            <a href="index.php?action=Admin\Comment\AdminCommentList&pageNumber=1">Retour</a>
        </div>
        <div class="m-4 p-3 shadow rounded w-50">
            <form method="post" action="index.php?action=Admin\Comment\AdminCommentSave" id="formComment">
                <div class="d-flex">
                    <input type="hidden" name="postId" value="{{ postId }}">
                    <input type="hidden" name="commentId" value="{{ commentId }}">
                    <div class="d-flex flex-column w-100">
                        <div>
                            <label class="form-label font-size3" for="comment">Commentaire :</label>
                            <textarea class="form-control" name="comment" id="comment" rows="10">{{ commentString }}</textarea>
                            <div class="text-danger">{{ warningComment }}</div>
                        </div>
                        <div class="mt-3">
                            <label class="form-check-label font-size3" for="validation">Valid√©</label>
                            <input type="checkbox" class="form-check-input" name="validation" id="validation" value="true"
                                {% if publicationDate != null %}
                                    checked
                                {% endif %}
                            >
                        </div>
                    </div>           
                </div>
                
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn button text-light me-3 w-20">Enregistrer</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}