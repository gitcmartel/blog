{% extends 'Layout/Layout.html.twig' %}

{% block title %}
<div class="hero-connexion">
    <p class="page-title fs-4 text text-body text-center">
        Connexion
    </p>
</div>
{% endblock %}

{% block body %}
    <section class="page-content">
        <div class="d-flex justify-content-center align-items-center">
            <form method="post" action="" class="container-fluid w-50 rounded-corners shadow p-3 connexion-form" novalidate>
                <div class="row h-100">
                    <div class="col-lg-4 d-flex justify-content-center align-items-start my-2">
                        <img class="connexion-img" src="../img/key-hole.png" alt="">
                    </div>
                    <div class="col-lg-8 px-5 d-flex flex-column justify-content-evenly">
                        <div class="d-flex flex-column pb-2">
                            <label for="login" class="form-label text-reset">Adresse email :</label>
                            <input type="text" class="form-control" id = "login" name="login" required value="{{ loginValue }}">
                            <div id="warningSurname" class="text-danger">{{ warningLogin }}</div>
                        </div>
                        <div class="d-flex flex-column pb-2">
                            <label for="password" class="form-label text-reset">Mot de passe :</label>
                            <input type="password" class="form-control" id = "password" name="password" required>
                            <div id="warningSurname" class="text-danger">{{ warningPassword }}</div>
                        </div>
                        <div class="row d-flex justify-content-between m-2 g-2">
                            <div class="col-md-6 d-flex justify-content-center">
                                <button class="button text-light" id="">Valider</button>
                            </div>
                            <div class="col-md-6 d-flex justify-content-center">
                                <a href="index.php?action=Password\passwordRenewal" class="fst-italic">Mot de passe oubli√© ?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}