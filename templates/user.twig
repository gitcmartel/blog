{% extends 'layout.twig' %}

{% block body %}
    <section class="container-fluid d-flex align-items-center flex-column">
        <div class="d-flex w-75 justify-content-end mt-2 me-2">
            <a href="index.php?action=AdminUserList&pageNumber=1">Retour</a>
        </div>
        <div class="m-4 p-3 shadow rounded w-75">
            <form method="post" action="index.php?action=adminUserSave" id="formUser">
                <div class="d-flex">
                    <input type="text" class="d-none" name="userId" value="{{ user.id }}">
                    <input type="text" class="d-none" name="devalidate" value="false">
                    <div class="d-flex flex-column">
                        <label class="form-label font-size3" for="userName">Nom</label>
                        <input type="text" class="form-control" name="userName" id="userName" value="{{ user.name }}">
                        <label class="form-label font-size3" for="surname">Pr√©nom</label>
                        <input type="text" class="form-control" name="surname" id="surname" value="{{ user.surname }}">
                    </div>           
                </div>
                <label class="form-label font-size3" for="pseudo">Pseudo</label>
                <input type="text" class="form-control" name="pseudo" id="pseudo" value="{{ user.pseudo }}">
                <label class="form-label font-size3" for="userMail">Email</label>
                <input type="text" class="form-control" name="userMail" id="userMail" value="{{ user.email }}">
                <label class="form-label font-size3" for="userPwd">Mot de passe</label>
                <input type="password" class="form-control" name="userPwd" id="userPwd">
                <label class="form-label font-size3" for="userPwdConfirmation">Mot de passe</label>
                <input type="password" class="form-control" name="userPwdConfirmation" id="userPwdConfirmation">
                <label class="form-label font-size3" for="userFunction">Fonction</label>
                <select class="form-select" name="userFunction" id="userFunction">
                    <option value="Lecteur" 
                        {% if user.function == "Lecteur"%}
                            selected
                        {% endif %}
                    >Lecteur</option>
                    <option value="Createur"
                        {% if user.function == "Createur"%}
                            selected
                        {% endif %}
                    >Createur</option>
                    <option value="Administrateur"
                        {% if user.function == "Administrateur"%}
                            selected
                        {% endif %}
                    >Administrateur</option>
                </select>
                <p>Compte utilisateur valide :</p>
                <div class="d-flex">
                    <label class="form-check-label font-size3" for="userValidity">Oui</label>
                    <input class="form-check-input" type="radio" id="userValidity" name="userValidity" value="-1" 
                        {% if user.isValid == -1%}
                            checked
                        {% endif %}
                    >
                    <label class="form-check-label font-size3" for="userValidity">Non</label>
                    <input class="form-check-input" type="radio" id="userValidity" name="userValidity" value="0"
                        {% if user.isValid == -1%}
                            checked
                        {% endif %}
                    >
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn button text-light me-3 w-15">Enregistrer</button>
                </div>
            </form>
        </div>
        
    </section>
{% endblock %}