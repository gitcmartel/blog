{% extends 'Layout/Layout.html.twig' %}

{% block title %}
<div class="hero-subscription">
    <p class="page-title fs-4 text text-body text-center">
        Inscription
    </p>
</div>

{% endblock %}

{% block body %}
    <section class="page-content">
        <div class="d-flex justify-content-center align-items-center">
            <form class="formulaire connexion-form container-fluid d-flex flex-column w-50 rounded-corners p-4 shadow" method="post" action="index.php?action=Subscription\Subscription" id = "subscriptionForm" novalidate>
                <div class="row h-100 mt-3">
                    <div class="col-md-6 d-flex flex-column pb-2 pe-3 mb-3">
                        <input type="text" class="form-control" id = "name" name="name"  required value="{{ user.getName() }}" placeholder="PrÃ©nom">
                        <div id="warningName" class="text-danger">{{ warningName }}</div>
                    </div>
                    <div class="col-md-6 d-flex flex-column pb-2 mb-3">
                        <input type="text" class="form-control" id = "surname" name="surname" required value="{{ user.getSurname() }}" placeholder="Nom">
                        <div id="warningSurname" class="text-danger">{{ warningSurname }}</div>
                    </div>
                </div>
                <div class="row h-100 mb-3">
                    <div class="col-md-6 flex-column pb-2 w-50 pe-3">
                        <input type="text" class="form-control" id = "pseudo" name="pseudo" value="{{ user.getPseudo() }}" placeholder="Pseudo" required>
                        <div id="warningPseudo" class="text-danger">{{ warningPseudo }}</div>
                    </div>
                </div>
                <div class="row h-100 mb-3">
                    <div class="col-md-12 d-flex flex-column pb-2">
                        <input type="email" class="form-control" id = "email" name="email" value="{{ user.getEmail() }}" placeholder="Adresse Email" required>
                        <div id="warningEmail" class="text-danger">{{ warningEmail }}</div>
                    </div>
                </div>
                <div class="row h-100 mb-3">
                    <div class="col-md-12 d-flex flex-column pb-2">
                        <div class="d-flex flex-row">
                            <input type="password" class="form-control" id = "password" name="password" placeholder="Mot de passe" required>
                            <i class="far fa-eye-slash position-relative align-self-center" id="togglePassword" style="margin-left: -30px; cursor: pointer;"></i>
                        </div>
                        <div id="warningPassword" class="text-danger">{{ warningPassword }}</div>
                    </div>
                </div>
                <div class="row h-100 mb-3">
                    <div class="col-md-12 d-flex flex-column pb-2">
                        <div class="d-flex flex-row">
                            <input type="password" class="form-control" id = "passwordConfirmation" name="passwordConfirmation" placeholder="Confirmation du mot de passe" required>
                            <i class="far fa-eye-slash position-relative align-self-center" id="togglePasswordConfirmation"  style="margin-left: -30px; cursor: pointer;"></i> 
                        </div> 
                    </div>
                </div>
                <div class="row h-100 mb-1">
                    <div class="col-md-8">

                    </div>
                    <div class="col-md-4 d-flex justify-content-center">
                        <button type="submit" class="button text-light" id="btnValider">Valider</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}

{% block js %}
    <script src="Js/Classes/Password.js"></script>
    <script>
        password = new Password();
    </script>
{% endblock %}